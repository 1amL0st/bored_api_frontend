{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "lib": ["Dom", "ESNext"],
    "jsx": "react",
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "store/*": ["./source/store/*"],
      "store": ["./source/store"],
      "api/*": ["./source/api/*"],
      "api": ["./source/api"],
      "layouts/*": ["./source/layouts/*"],
      "components": ["./source/copmponents"],
      "components/*": ["./source/components/*"],
      "routes": ["./source/routes"]
    },
    "typeRoots": [
      "./custom_typings"
    ],
    "types": [ "@types/jest", "node" ]
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
      /* ... */
  }
}